<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/layout/css/layout.css" >

</head>
<body>
    <aside>
        <div id="avatar">
            <!-- <img src="/img/birds_doodle.jpg" alt=""> -->
            <!-- <img src="/img/dao.jpg" alt=""> -->
            <!-- <img src="/img/cat.jpg" alt=""> -->
            <img src="/img/noface.jpg" alt="">
